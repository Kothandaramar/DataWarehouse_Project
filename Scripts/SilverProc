CREATE DEFINER=`root`@`localhost` PROCEDURE `SilverProc`()
BEGIN
	  DECLARE t_start DATETIME;
    DECLARE t_end DATETIME;
    DECLARE t1 DATETIME;
    DECLARE t2 DATETIME;
    DECLARE elapsed INT;

    -- Start total timer
    SET t_start = NOW();

    -- Step 1: silver_crm_cust_info
    SET t1 = NOW();
    TRUNCATE TABLE DataWarehouse_silver.silver_crm_cust_info;

    INSERT INTO DataWarehouse_silver.silver_crm_cust_info (
        cust_id, cust_key, cust_firstname, cust_lastname,
        cust_marital_status, cust_gender, cust_create_date
    )
    SELECT
        cust_id,
        cust_key,
        TRIM(cust_firstname),
        TRIM(cust_lastname),
        CASE 
            WHEN UPPER(TRIM(cust_marital_status)) = 'M' THEN 'Married'
            WHEN UPPER(TRIM(cust_marital_status)) = 'S' THEN 'Single'
            ELSE 'n/a'
        END,
        CASE 
            WHEN UPPER(TRIM(cust_gender)) = 'F' THEN 'Female'
            WHEN UPPER(TRIM(cust_gender)) = 'M' THEN 'Male'
            ELSE 'n/a'
        END,
        cust_create_date
    FROM (
        SELECT *, ROW_NUMBER() OVER (PARTITION BY cust_id ORDER BY cust_create_date DESC) AS flag_last
        FROM DataWarehouse_Bronze.bronze_crm_cust_info
    ) x
    WHERE flag_last = 1;
    SET t2 = NOW();
    SET elapsed = TIMESTAMPDIFF(SECOND, t1, t2);
    SELECT 'Step 1 - silver_crm_cust_info' AS step, elapsed;

    -- Step 2: silver_crm_prd_info
    SET t1 = NOW();
    TRUNCATE TABLE DataWarehouse_silver.silver_crm_prd_info;

    INSERT INTO DataWarehouse_silver.silver_crm_prd_info (
        prd_id, cat_id, prd_key, prd_name,
        prd_cost, prd_line, prd_start_dt, prd_end_dt
    )
    SELECT 
        prd_id,
        REPLACE(SUBSTRING(prd_key, 1, 5), '-', '_'),
        SUBSTRING(prd_key, 7, LENGTH(prd_key)),
        prd_name,
        IFNULL(prd_cost, 0),
        CASE 
            WHEN UPPER(TRIM(prd_line)) = 'S' THEN 'Other Sales'
            WHEN UPPER(TRIM(prd_line)) = 'M' THEN 'Mountain'
            WHEN UPPER(TRIM(prd_line)) = 'R' THEN 'Road'
            WHEN UPPER(TRIM(prd_line)) = 'T' THEN 'Touring'
            ELSE 'n/a'
        END,
        CAST(prd_start_dt AS DATE),
        CAST(DATE_SUB(LEAD(prd_start_dt) OVER (PARTITION BY prd_key ORDER BY prd_start_dt), INTERVAL 1 DAY) AS DATE)
    FROM DataWarehouse_Bronze.bronze_crm_prd_info;
    SET t2 = NOW();
    SET elapsed = TIMESTAMPDIFF(SECOND, t1, t2);
    SELECT 'Step 2 - silver_crm_prd_info' AS step, elapsed;

    -- Step 3: silver_crm_sales_details
    SET t1 = NOW();
    TRUNCATE TABLE DataWarehouse_silver.silver_crm_sales_details;

    INSERT INTO DataWarehouse_silver.silver_crm_sales_details (
        sls_ord_num, sls_prd_key, sls_cust_id, sls_order_dt,
        sls_ship_dt, sls_due_dt, sls_sales, sls_quantity, sls_price
    )
    SELECT 
        sls_ord_num,
        sls_prd_key,
        sls_cust_id,
        CASE 
            WHEN sls_order_dt = 0 OR LENGTH(sls_order_dt) != 8 THEN NULL
            ELSE STR_TO_DATE(CAST(sls_order_dt AS CHAR), '%Y%m%d')
        END,
        CASE 
            WHEN sls_ship_dt = 0 OR LENGTH(sls_ship_dt) != 8 THEN NULL
            ELSE STR_TO_DATE(CAST(sls_ship_dt AS CHAR), '%Y%m%d')
        END,
        CASE 
            WHEN sls_due_dt = 0 OR LENGTH(sls_due_dt) != 8 THEN NULL
            ELSE STR_TO_DATE(CAST(sls_due_dt AS CHAR), '%Y%m%d')
        END,
        CASE 
            WHEN sls_sales IS NULL OR sls_sales <= 0 OR sls_sales != (sls_quantity * ABS(sls_price))
            THEN sls_quantity * ABS(sls_price)
            ELSE sls_sales
        END,
        sls_quantity,
        CASE 
            WHEN sls_price IS NULL OR sls_price <= 0 OR IFNULL(sls_quantity, 0) = 0 THEN 0
            ELSE sls_sales / sls_quantity
        END
    FROM DataWarehouse_Bronze.bronze_crm_sales_details;
    SET t2 = NOW();
    SET elapsed = TIMESTAMPDIFF(SECOND, t1, t2);
    SELECT 'Step 3 - silver_crm_sales_details' AS step, elapsed;

    -- Step 4: silver_erp_cust_az12
    SET t1 = NOW();
    TRUNCATE TABLE DataWarehouse_silver.silver_erp_cust_az12;

    INSERT INTO DataWarehouse_silver.silver_erp_cust_az12 (
        cid, bdate, gen
    )
    SELECT 
        CASE 
            WHEN cid LIKE 'NAS%' THEN SUBSTRING(cid, 4, LENGTH(cid))
            ELSE cid
        END,
        CASE 
            WHEN bdate > SYSDATE() THEN NULL
            ELSE bdate
        END,
        CASE 
            WHEN UPPER(TRIM(gen)) IN ('F', 'FEMALE') THEN 'Female'
            WHEN UPPER(TRIM(gen)) IN ('M', 'MALE') THEN 'Male'
            ELSE 'n/a'
        END
    FROM DataWarehouse_Bronze.bronze_erp_cust_az12;
    SET t2 = NOW();
    SET elapsed = TIMESTAMPDIFF(SECOND, t1, t2);
    SELECT 'Step 4 - silver_erp_cust_az12' AS step, elapsed;

    -- Step 5: silver_erp_loc_a101
    SET t1 = NOW();
    TRUNCATE TABLE DataWarehouse_silver.silver_erp_loc_a101;

    INSERT INTO DataWarehouse_silver.silver_erp_loc_a101 (
        cid, cntry
    )
    SELECT 
        cid,
        CASE 
            WHEN TRIM(cntry) = 'DE' THEN 'Germany'
            WHEN TRIM(cntry) IN ('United States', 'US', 'USA') THEN 'United States'
            WHEN TRIM(cntry) = '' OR cntry IS NULL THEN 'n/a'
            ELSE TRIM(cntry)
        END
    FROM DataWarehouse_Bronze.bronze_erp_loc_a101;
    SET t2 = NOW();
    SET elapsed = TIMESTAMPDIFF(SECOND, t1, t2);
    SELECT 'Step 5 - silver_erp_loc_a101' AS step, elapsed;

    -- Step 6: silver_erp_px_cat_g1v2
    SET t1 = NOW();
    TRUNCATE TABLE DataWarehouse_silver.silver_erp_px_cat_g1v2;

    INSERT INTO DataWarehouse_silver.silver_erp_px_cat_g1v2 (
        id, cat, subcat, maintenance
    )
    SELECT 
        id, cat, subcat, maintenance
    FROM DataWarehouse_Bronze.bronze_erp_px_cat_g1v2;
    SET t2 = NOW();
    SET elapsed = TIMESTAMPDIFF(SECOND, t1, t2);
    SELECT 'Step 6 - silver_erp_px_cat_g1v2' AS step, elapsed;

    -- Final step: total duration
    SET t_end = NOW();
    SET elapsed = TIMESTAMPDIFF(SECOND, t_start, t_end);
    SELECT 'Total Procedure Time' AS step, elapsed;


END
